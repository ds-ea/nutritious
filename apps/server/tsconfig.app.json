{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "node16",
		"types": [
			"node"
		],
		"emitDecoratorMetadata": true,
		"moduleResolution": "node16",
		"target": "esnext"
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
